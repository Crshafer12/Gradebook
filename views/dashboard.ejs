<%- include("partials/header") -%>

    <body>
        <!-- Responsive navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" ><img src="/images/book.png" height="50"
                        alt="Page Logo" />GradeBook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation"><span
                        class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" aria-current="page" href="/home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                        <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/studentHome">Student Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="/details">Site Details</a></li>
                        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">

                <div class=" col row justify-content-center align-items-center h-100">
                    <h1 class="text-center">Profile</h1>
                    <div class="col col-lg-10 mb-4 mb-lg-10">
                        <div class="card mb-3" style="border-radius: .5rem;">
                            <div class="row g-0">
                                <div class="col-md-4 gradient-custom2 text-center text-white"
                                    style="border-radius: .5rem; border-bottom-left-radius: .5rem;">
                                    <img src="/images/blank.png" alt="Avatar" class="img-fluid my-5"
                                        style="width: 80px;" />
                                    <!-- <h5>Student Name</h5> -->

                                    <h5>
                                        <%= user.firstname %>
                                    </h5>
                                    <h5>
                                        <%= user.lastname %>
                                    </h5>
                                    <p>Current Standing:</p>
                                    <h5>
                                        <%= user.class %>
                                    </h5>
                                    <i class="far fa-edit mb-5"></i>
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body p-4">
                                        <h6>Information</h6>
                                        <hr class="mt-0 mb-4">
                                        <div class="row pt-1">
                                            <div class="col-6 mb-3">
                                                <h6>Email</h6>
                                                <p>
                                                    <%= user.username %>
                                                </p>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <h6>Phone</h6>
                                                <h5>
                                                    <%= user.number %>
                                                </h5>

                                                <!-- <p class="text-muted">123 456 789</p> -->
                                            </div>
                                        </div>
                                        <a class="btn btn-primary" href="/profile">Edit Profile</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <h1 class="text-center">Grades</h1>
                    <table class="table table-light ">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Class</th>
                                <th scope="col">Professor</th>
                                <th scope="col">Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Class 1</td>
                                <td>Dr. Hasbulla</td>
                                <td>44</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Class 2</td>
                                <td>Dr. Oz</td>
                                <td>21</td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Class 3</td>
                                <td>Dr. Disrespect</td>
                                <td>69</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include("partials/footer") -%>