        <div class="container bootstrap snippets bootdey justify-content-center align-items-center">
            <h1>Edit Profile</h1>
            <hr>
            <div class="row">
                <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center">
                        <img src="/images/blank.png" class="avatar img-circle img-thumbnail" alt="avatar">
                        <h6>Upload a different photo...</h6>

                        <input type="file" class="form-control">
                    </div>
                </div>

                <!-- edit form column -->
                <div class="col-md-9 personal-info">

                    <h3>Personal info</h3>

                    <form class="form-horizontal" role="form" action="/updateProfile" method="POST">
                        <div class="row mb-3">
                            <label for="first" class="col-sm-2 col-form-label" name="first">First
                                Name:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="firstname" value=<%=user.firstname %>>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="last" class="col-sm-2 col-form-label  ">Last Name:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="lastname" value=<%=user.lastname %>>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="class" class="col-sm-2 col-form-label">Class Standing:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="class" value=<%=user.class %>>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="phone" class="col-sm-2 col-form-label  ">Phone Number:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="number" value=<%=user.number %>>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="email" class="col-sm-2 col-form-label">Email:</label>
                            <div class="col-sm-5">
                                <input type="email" class="form-control" name="username" value="Current Email">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="password" class="col-sm-2 col-form-label  ">Password:</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="password" value="Current Password">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark ">Submit</button>
                    </form>

                </div>
            </div>
        </div>
        <hr>




